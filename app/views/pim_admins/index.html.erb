	<div id="notice"><%= notice %></div>
	
	<div id="pim_admins_wrapper">
		
		<% if (@pim_admins.empty?) %>
			<div class="pim_admin">
				<%= LANGUAGE.lang['sorry-no-admins'] %>
			</div>
		<% end %>
		
		<% @pim_admins.each do |pim_admin| %>	
			<div class="pim_admin">
				<div class="pim_admin_username"><%= link_to pim_admin.username, pim_admin, :class => "pim_admin_username" %></div>
				<div class="pim_admin_firstname"><%= LANGUAGE.lang['first-name'] + ": " + pim_admin.first %></div>
				<div class="pim_admin_lastname"><%= LANGUAGE.lang['last-name'] + ": " + pim_admin.last %></div>
				<div class="pim_admin_email"><%= LANGUAGE.lang['email-address'] + ": " + pim_admin.email %></div>
			</div>
		<% end %>

	</div>
